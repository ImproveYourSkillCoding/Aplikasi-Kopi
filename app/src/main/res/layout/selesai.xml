<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiasi">

    <!-- gambar ojol -->
    <ImageView
        android:id="@+id/order"
        android:layout_width="254dp"
        android:layout_height="222dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="75dp"
        android:src="@drawable/order"
        android:layout_centerHorizontal="true"/>

    <!-- text selamat -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/coffee_latte"
        android:text="SELAMAT"
        android:textSize="32sp"
        android:layout_below="@id/order"
        android:layout_centerHorizontal="true"/>

    <!-- detail text -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_below="@id/textView2"
        android:fontFamily="@font/coffee_latte"
        android:text="Pembayaran anda sudah selesai, minuman anda sedang disiapkan dan akan diantar dalam 15 menit."
        android:textAlignment="center"
        android:textSize="24sp"
        />
    <!-- Button Ok -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_biasa"
        android:id="@+id/ok"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        android:layout_below="@id/textView3"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>