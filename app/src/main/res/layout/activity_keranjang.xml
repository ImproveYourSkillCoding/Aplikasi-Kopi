<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/daftar_keranjang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/gradiasi"
       android:layout_alignParentBottom="true">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/txt_total"
           android:textColor="@color/putih"
           android:layout_marginTop="20dp"
           android:fontFamily="@font/coffee_latte"
           android:text="Anda Belum Memesan Apapun! "
           android:layout_marginLeft="15dp"
           android:textSize="20sp"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/txt_jumlah"
           android:textColor="@color/putih"
           android:layout_marginTop="20dp"
           android:layout_below="@+id/txt_total"
           android:fontFamily="@font/coffee_latte"
           android:layout_marginLeft="15dp"
           android:textSize="20sp"
           android:layout_marginBottom="20dp"/>

       <Button
           android:id="@+id/btn_pembayaran"
           android:layout_width="120dp"
           android:layout_height="wrap_content"
           android:layout_below="@id/txt_total"
           android:layout_alignParentEnd="true"
           android:layout_marginTop="2dp"
           android:layout_marginEnd="40dp"
           android:background="@drawable/button_biasa"
           android:text="Pilih Pembayaran"
           android:textColor="@color/putih" />
   </RelativeLayout>
</RelativeLayout>