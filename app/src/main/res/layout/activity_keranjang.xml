<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/daftar_keranjang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/gradiasi"
       android:layout_alignParentBottom="true">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/txt_total"
           android:textColor="@color/putih"
           android:layout_marginTop="20dp"
           android:fontFamily="@font/coffee_latte"
           android:text="Ini total pembayaran"
           android:layout_marginLeft="15dp"
           android:textSize="20sp"/>
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/button_biasa"
           android:layout_below="@id/txt_total"
           android:layout_toRightOf="@id/txt_total"
           android:text="BAYAR"
           android:id="@+id/btn_bayar"
           android:textColor="@color/putih"
           android:layout_marginStart="110dp"
           android:layout_marginBottom="20dp"/>

   </RelativeLayout>

</RelativeLayout>