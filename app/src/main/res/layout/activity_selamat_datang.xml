<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiasi"
    tools:context=".SelamatDatangActivity">


    <ImageView
        android:contentDescription=""
        android:id="@+id/welcome1"
        android:layout_width="413dp"
        android:layout_height="205dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/dashboard"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="238dp"
        android:layout_height="37dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="40dp"

        android:text="Selamat Datang"
        android:fontFamily="@font/coffee_latte"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome1" />

    <TextView
        android:id="@+id/intro"
        android:layout_width="367dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="110dp"
        android:text="Di Darkst kamu akan menemukan kopi dengan kualitas mumpuni langsung dari para petani di Sumatra"
        android:fontFamily="@font/coffee_latte"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome1" />

    <Button
        android:id="@+id/masuk"
        android:layout_width="120dp"
        android:layout_height="54dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/button_biasa"
        android:backgroundTintMode="screen"
        android:fontFamily="@font/coffee_latte"
        android:text="Masuk"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/daftar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro"
        app:layout_constraintVertical_bias="0.36" />

    <Button
        android:id="@+id/daftar"
        android:layout_width="120dp"
        android:layout_height="54dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/button_biasa"
        android:backgroundTintMode="screen"
        android:fontFamily="@font/coffee_latte"
        android:text="Daftar"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/masuk"
        app:layout_constraintTop_toBottomOf="@+id/intro"
        app:layout_constraintVertical_bias="0.36" />

</androidx.constraintlayout.widget.ConstraintLayout>