<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiasi"
    tools:context=".SelamatDatangActivity">


    <ImageView
        android:contentDescription=""
        android:id="@+id/welcome1"
        android:layout_width="413dp"
        android:layout_height="205dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/dashboard"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="238dp"
        android:layout_height="37dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="40dp"

        android:text="Selamat Datang"
        android:fontFamily="@font/coffee_latte"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome1" />

    <TextView
        android:id="@+id/intro"
        android:layout_width="367dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="110dp"
        android:text="Di Darkst kamu akan menemukan kopi dengan kualitas mumpuni langsung dari para petani di Sumatra"
        android:fontFamily="@font/coffee_latte"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome1" />

    <Button
        android:id="@+id/masuk"
        android:layout_width="120dp"
        android:layout_height="54dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/button_biasa"
        android:backgroundTintMode="screen"
        android:fontFamily="@font/coffee_latte"
        android:text="Masuk"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro" />

    <Button
        android:id="@+id/daftar"
        android:layout_width="120dp"
        android:layout_height="54dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="70dp"
        android:backgroundTintMode="screen"
        android:background="@drawable/button_biasa"
        android:text="Daftar"
        android:textAlignment="center"
        android:fontFamily="@font/coffee_latte"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="345dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="140dp"
        android:text="Atau Masuk Dengan"
        android:fontFamily="@font/coffee_latte"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro" />

    <Button
        android:id="@+id/facebook"
        android:layout_width="75dp"
        android:layout_height="73dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/icon_facebook"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.208" />

    <Button
        android:id="@+id/google"
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/icon_google"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.183" />

</androidx.constraintlayout.widget.ConstraintLayout>