<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiasi"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:id="@+id/rl_input"
        android:layout_marginRight="70dp"
        android:background="@drawable/sp_rectangle_root"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="20dp"
            android:id="@+id/et_username"
            android:hint="Email"
            android:fontFamily="@font/coffee_latte"
            android:backgroundTint="#FFF"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <View
            android:id="@+id/v_saparator"
            android:background="#E8E9E8"
            android:layout_below="@id/et_username"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="301dp"
            android:layout_height="58dp"
            android:layout_below="@id/v_saparator"
            android:backgroundTint="#FFF"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="20dp"
            android:fontFamily="@font/coffee_latte"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp" />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_login"
        android:layout_marginRight="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_above="@id/rl_input"
        android:fontFamily="@font/coffee_latte"
        android:layout_marginBottom="40dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="Masuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_fb"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="96dp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/login_fb"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="53dp" />

</RelativeLayout>